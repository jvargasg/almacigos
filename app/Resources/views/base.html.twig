                                    <a href="{{ path('semilla') }}">Semillas</a>
                                </li>
                                <li role="presentation" class="{% if cliente_active is defined  %} {{cliente_active}} {% endif %}" >
                                    <a href="{{ path('cliente') }}">Clientes</a>
                                </li>
                            </ul>
                        </li>
                        <li role="presentation" class="{% if notaventa_active is defined  %} {{notaventa_active}} {% endif %}" >
                            <a href="{{ path('notaventa') }}">Notas de Ventas</a></li>
                        <li role="presentation" class="{% if pedido_active is defined  %} {{pedido_active}} {% endif %}" >
                            <a href="{{ path('pedido') }}">Pedidos</a>
                        </li>
                        <li role="presentation" class="{% if siembra_active is defined  %} {{siembra_active}} {% endif %}" >
                            <a href="{{ path('siembra') }}">Siembras</a>
                        </li>                                                
