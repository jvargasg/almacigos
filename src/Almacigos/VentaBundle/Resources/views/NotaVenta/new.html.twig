{% extends '::base.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" href="//code.jquery.com/ui/1.11.2/themes/smoothness/jquery-ui.css">	
{% endblock %}
{% block javascripts %}    
	<script src="//code.jquery.com/jquery-1.10.2.js"></script>
	<script src="//code.jquery.com/ui/1.11.2/jquery-ui.js"></script>
    <script>
		$('.date').datepicker({
            language: 'es',
            startDate: '-100y',            
            dateFormat: 'd/m/yy'
        });
	</script>
{% endblock %}

{% block body -%}
	
	<div>
		<div class="row">
		    <h1 class="col-md-7">Nueva Nota de Venta</h1>
				
				{{ form_start(form)}}
		   
			    <div class="col-md-7">{{ form_errors(form) }}</div>

			    <div class="col-md-7">{{ form_row(form.cliente) }}</div>
			    <div class="col-md-5"><a href="{{ path('cliente_new') }}">Agregar Nuevo Cliente</a></div>
			    

			    <div class="col-md-7">{{ form_row(form.numero) }}</div>

			    <div class="col-md-4">{{ form_row(form.condicionVenta) }}</div>
			    

			    <div class="col-md-4">{{ form_row(form.abono) }}</div>
			    <div class="col-md-4 ">{{ form_row(form.fechaAbono) }}</div>
				
				<div class="col-md-7">{{ form_row(form.notas) }}</div>
				<div class="col-md-7">{{ form_row(form.datosDespacho) }}</div>

				<button type="submit" class="btn col-md-4 col-md-offset-4 btn-success text-center">
		            Crear
		        </button>
				{{ form_row(form._token) }}
							
		</div>
    	
	    <ul class="record_actions">
		    <li>
		        <a href="{{ path('notaventa') }}">
		            Volver al listado
		        </a>
		    </li>
		</ul>
        
	</div>
{% endblock %}
