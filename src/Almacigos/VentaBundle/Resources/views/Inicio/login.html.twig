{% extends '::base.html.twig' %}

{% block body -%}
    <div class="row">
	    <h1 class="col-md-7">Login</h1>
			
			{{ form_start(form)}}
	   
		    <div class="col-md-7">{{ form_errors(form) }}</div>

		    <div class="col-md-7">{{ form_row(form.nombre) }}</div>	    

		    <div class="col-md-7">{{ form_row(form.pass) }}</div>

			<button type="submit" class="btn col-md-4 col-md-offset-4 btn-success text-center">
	            Ingresar
	        </button>
			{{ form_row(form._token) }}
						
	</div>

{% endblock %}
