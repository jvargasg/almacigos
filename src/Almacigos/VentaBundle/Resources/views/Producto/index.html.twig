{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Listado de Productos</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Especie</th>
                <th>Variedad</th>
                <th>Precio neto</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('producto_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.especie }}</td>
                <td>{{ entity.variedad }}</td>
                <td>${{ entity.precioNeto|number_format(0, '.', '.') }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('producto_show', { 'id': entity.id }) }}">Ver</a>
                        </li>
                        <li>
                            <a href="{{ path('producto_edit', { 'id': entity.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('producto_new') }}">
                Crear nuevo Producto
            </a>
        </li>
    </ul>
    {% endblock %}
