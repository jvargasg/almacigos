{% extends '::base.html.twig' %}
{% block title %}Ver Nota De Venta{% endblock %}
{% block body -%}
    <h1>Pedido</h1>

    <table class="record_properties table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Cantidad solicitada</th>
                <td>{{ entity.cantidadSolicitada }}</td>
            </tr>
            <tr>
                <th>Neto</th>
                <td>${{ entity.neto|number_format(0, '.', '.') }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>${{ entity.total|number_format(0, '.', '.') }}</td>
            </tr>
            <tr>
                <th>Producto</th>
                <td>{{ entity.producto }}</td>
            </tr>
            <tr>
                <th>Fecha de despacho</th>
                <td>{{ entity.fechaDespacho|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('notaventa_show',{ 'id':entity.notaVenta.id }) }}">
            Volver a Nota de Venta
        </a>
    </li>
    <li>
        <a href="{{ path('pedido_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
