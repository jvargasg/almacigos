{% extends '::base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="//code.jquery.com/ui/1.11.2/themes/smoothness/jquery-ui.css">	
{% endblock %}
{% block javascripts %}    
	<script src="//code.jquery.com/jquery-1.10.2.js"></script>
	<script src="//code.jquery.com/ui/1.11.2/jquery-ui.js"></script>
    <script>
		$('.date').datepicker({
            language: 'es',
            startDate: '-100y',            
            dateFormat: 'd/m/yy'
        });
	</script>
{% endblock %}

{% block body -%}
<div class="row">
    <h1>FechaSiembra edit</h1>

    {{ form_start(edit_form)}}
    {{ form_errors(edit_form) }}

	<TABLE class="records_list table table-bordered">
        
    <TR>
        <TH rowspan="2">
            
            <TR>
                <TH>Verano</th>
                <TH>Oto√±o</th>
                <th>Invierno</th>
                <th>Primavera</th>
            </tr>

            <TR>
                <TH>Siembra
                    <TD>{{ form_row(edit_form.siembraVerano) }}</td>
                    <TD>{{ form_row(edit_form.siembraOtonio) }}</td>
                    <td>{{ form_row(edit_form.siembraInvierno) }}</td>
                    <td>{{ form_row(edit_form.siembraPrimavera) }}</td>
                </th>
            </tr>
            <TR>
                <TH>Despacho
                    <td>{{ form_row(edit_form.despachoVerano)  }}</td>
                    <td>{{ form_row(edit_form.despachoOtonio)  }}</td>
                    <td>{{ form_row(edit_form.despachoInvierno) }}</td>
                    <td>{{ form_row(edit_form.despachoPrimavera) }}</td>
                </th>
            </tr>

        </th>
    </TABLE>
    <button type="submit" class="btn col-md-4 col-md-offset-4 btn-success text-center">
        Guardar fechas
    </button>
	{{ form_row(edit_form._token) }}
</div>
<div class="row">
    <ul class="record_actions">
	    <li>
	        <a href="{{ path('fechasiembra') }}">
	            Volver
	        </a>
	    </li>
	    <li>{{ form(delete_form) }}</li>
	</ul>
</div>
{% endblock %}
