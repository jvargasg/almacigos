{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Listado de Bandejas</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipo</th>
                <th>Cantidad</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('bandeja_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.tipo }}</td>
                <td>{{ entity.cantidad|number_format(0, '.', '.') }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('bandeja_show', { 'id': entity.id }) }}">Ver</a>
                    </li>
                    <li>
                        <a href="{{ path('bandeja_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('bandeja_new') }}">
                Crear nuevo tipo de bandeja
            </a>
        </li>
    </ul>
    {% endblock %}
