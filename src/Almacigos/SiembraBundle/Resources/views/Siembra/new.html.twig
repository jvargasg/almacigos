{% extends '::base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="//code.jquery.com/ui/1.11.2/themes/smoothness/jquery-ui.css">	
{% endblock %}
{% block javascripts %}    
	<script src="//code.jquery.com/jquery-1.10.2.js"></script>
	<script src="//code.jquery.com/ui/1.11.2/jquery-ui.js"></script>
    <script>
		$('.date').datepicker({
            language: 'es',
            startDate: '-100y',            
            dateFormat: 'd/m/Y'
        });
	</script>
{% endblock %}

{% block body -%}
<div class="row">
    <h1>Generaci√≥n de Siembra</h1>

    {{ form_start(form)}}
		   
    {{ form_errors(form) }}

    <div class="col-md-4  col-md-offset-1">{{ form_row(form.siembra) }}</div>
    <div class="col-md-2  col-md-offset-1">{{ form_row(form.bandeja) }}</div>
    <div class="col-md-4  col-md-offset-3">{{ form_row(form.dias) }}</div>
</div>
<div class="row">
	<button type="submit" class="btn col-md-3 col-md-offset-3 btn-success text-center">
        Crear
    </button>
	{{ form_row(form._token) }}
</div>
<div class="row">
    <ul class="record_actions">
	    <li>
	        <a href="{{ path('siembra') }}">
	            Volver al listado
	        </a>
	    </li>
	</ul>
</div>
{% endblock %}
